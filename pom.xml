<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>currency</artifactId>
    <groupId>com.rarible.protocol</groupId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>

    <repositories>
        <repository>
            <id>nexus-snapshots</id>
            <name>nexus-snapshots</name>
            <url>http://10.7.3.6:8081/nexus/content/repositories/snapshots/</url>
        </repository>
    </repositories>

    <parent>
        <groupId>com.rarible</groupId>
        <artifactId>rarible-parent-pom</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <properties>
        <swagger-annotations.version>1.5.20</swagger-annotations.version>
        <spring-cloud.version>2.2.2.RELEASE</spring-cloud.version>
        <springdoc.version>1.5.4</springdoc.version>
        <rarible-core.version>1.2-SNAPSHOT</rarible-core.version>
        <testcontainers-version>1.15.2</testcontainers-version>
        <mockk.version>1.10.5</mockk.version>
        <dev-jna.version>5.7.0</dev-jna.version>
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>ru.roborox.spring</groupId>
                <artifactId>parent</artifactId>
                <version>1.2-SNAPSHOT</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.testcontainers</groupId>
                <artifactId>testcontainers-bom</artifactId>
                <version>${testcontainers-version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.rarible.protocol</groupId>
                <artifactId>protocol-currency-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rarible.protocol</groupId>
                <artifactId>protocol-currency-api-model</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rarible.protocol</groupId>
                <artifactId>protocol-currency-api-converters</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rarible.protocol</groupId>
                <artifactId>protocol-currency-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rarible.protocol</groupId>
                <artifactId>protocol-currency-api-client</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rarible</groupId>
                <artifactId>rarible-telemetry-starter</artifactId>
                <version>${rarible-core.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rarible</groupId>
                <artifactId>rarible-core-starter</artifactId>
                <version>${rarible-core.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rarible</groupId>
                <artifactId>rarible-core-service</artifactId>
                <version>${rarible-core.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rarible</groupId>
                <artifactId>rarible-core-converter</artifactId>
                <version>${rarible-core.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rarible</groupId>
                <artifactId>rarible-core-common</artifactId>
                <version>${rarible-core.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rarible</groupId>
                <artifactId>rarible-core-model</artifactId>
                <version>${rarible-core.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rarible</groupId>
                <artifactId>rarible-core-contract</artifactId>
                <version>${rarible-core.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rarible</groupId>
                <artifactId>rarible-core-test</artifactId>
                <version>${rarible-core.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springdoc</groupId>
                <artifactId>springdoc-openapi-webflux-ui</artifactId>
                <version>${springdoc.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springdoc</groupId>
                <artifactId>springdoc-openapi-kotlin</artifactId>
                <version>${springdoc.version}</version>
            </dependency>
            <dependency>
                <groupId>io.mockk</groupId>
                <artifactId>mockk</artifactId>
                <version>${mockk.version}</version>
            </dependency>
            <dependency>
                <groupId>net.java.dev.jna</groupId>
                <artifactId>jna</artifactId>
                <version>${dev-jna.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-reflect</artifactId>
        </dependency>
        <dependency>
            <groupId>ru.roborox.spring</groupId>
            <artifactId>log-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <version>1.0-alpha-2</version>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>../profiles/${config.file}.properties</file>
                            </files>
                            <quiet>true</quiet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>DEFAULT</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <config.file>default</config.file>
            </properties>
        </profile>
        <profile>
            <id>JENKINS</id>
            <properties>
                <config.file>jenkins</config.file>
            </properties>
        </profile>
    </profiles>
    <modules>
        <module>api</module>
        <module>core</module>
        <module>converters</module>
        <module>api-model</module>
        <module>client</module>
        <module>client-starter</module>
    </modules>
</project>
